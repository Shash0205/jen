<build>
  <plugins>
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>3.0.0</version> <!-- or latest stable -->
      <executions>
        <execution>
          <id>run-main</id>
          <goals>
            <goal>java</goal>
          </goals>
        </execution>
      </executions>
      <configuration>
        <mainClass>com.example.Main</mainClass> <!-- Replace with your main class -->
      </configuration>
    </plugin>
  </plugins>
</build>

